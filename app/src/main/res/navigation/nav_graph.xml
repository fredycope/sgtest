<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/listFragment">
    <fragment
        android:id="@+id/listFragment"
        android:name="com.example.gstest.ui.list.ListFragment"
        android:label="ListFragment" >
        <action
            android:id="@+id/action_listFragment_to_descriptionFragment"
            app:destination="@id/descriptionFragment" />
        <argument
            android:name="obj"
            app:argType="string"
            />
    </fragment>
    <fragment
        android:id="@+id/descriptionFragment"
        android:name="com.example.gstest.ui.description.DescriptionFragment"
        android:label="DescriptionFragment" />

    <fragment
        android:id="@+id/mapsFragment"
        android:name="com.example.gstest.ui.locations.MapsFragment"
        android:label="fragment_maps"
        tools:layout="@layout/fragment_maps" />
</navigation>